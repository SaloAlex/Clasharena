generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tournament {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  title           String
  description     String
  format          String
  startDate       DateTime
  endDate         DateTime
  duration        Json     // { value: number, unit: string }
  gameTypes       String[]
  pointsPerWin    Int
  pointsPerLoss   Int
  pointsFirstBlood Int
  pointsFirstTower Int
  pointsPerfectGame Int
  minRank         String
  maxRank         String
  maxGamesPerDay  Int
  status          String   // ACTIVE, FINISHED, CANCELLED
  creatorId       String

  @@index([creatorId])
}